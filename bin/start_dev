#!/bin/bash

bundle check || bundle install

# Remove pid file
if [ -a tmp/pids/server.pid ]; then
  rm tmp/pids/server.pid
fi

# - Run annotate
# bundle exec annotate -f markdown
# - Run Rubocop with auto correct
# bundle exec rubocop -a

bundle exec rails s -p 3000 -b "0.0.0.0"
